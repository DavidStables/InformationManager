<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="informationmodel">
        <class>org.endeavourhealth.informationmodel.api.database.models.ConceptEntity</class>
        <class>org.endeavourhealth.informationmodel.api.database.models.ConceptRelationshipEntity</class>
        <class>org.endeavourhealth.informationmodel.api.database.models.ExpressionEntity</class>
        <class>org.endeavourhealth.informationmodel.api.database.models.RangeEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/information_model?rewriteBatchedStatements=true"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.jdbc.batch_size" value="50"/>
        </properties>
    </persistence-unit>
</persistence>
